<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.OngRegisterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_register_ong"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ongNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/vamosajudar_register_ong"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/description_register_ong"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ongDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/a_melhor_ong_register_ong"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/goal_register_ong"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/ongGoalEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ajudar_register_ong"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/endere_o_register_ong"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ong_street"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalAddress"
                    android:hint="Rua"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/ong_number_addresss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalAddress"
                    android:hint="NÃºmero"
                    android:inputType="number"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/postal_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalCode"
                    android:hint="CEP"
                    android:inputType="number"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/estado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalAddress"
                    android:hint="Estado"
                    android:inputType="textPostalAddress"
                    android:padding="8dp" />

            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contato:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="emailAddress"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:padding="8dp" />


            <EditText

                android:id="@+id/phone_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="phone"
                android:hint="(16)99999-9999"
                android:inputType="phone"
                android:padding="8dp" />


            <EditText

                android:id="@+id/website_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="name"
                android:hint="www.vamosajudar.com.br"
                android:inputType="phone"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/pix"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/pix_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="name"
                android:hint="@string/email_telefone_chave_aleatoria"
                android:inputType="phone"
                android:padding="8dp" />


            <ImageView
                android:id="@+id/add_photo_register_ong"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/add_photo_icon_24"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/confirm_creation_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:text="@string/confirmar"
                    android:textColor="@color/design_default_color_on_primary"
                    android:backgroundTint="@color/secundary_green"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cancel_creation_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cancelar_login"
                    android:textColor="@color/design_default_color_on_primary"
                    android:backgroundTint="@color/secundary_green"
                    android:textSize="16sp" />

            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>






